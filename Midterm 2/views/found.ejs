<%- include("partials/header"); -%>

<%- include("partials/nav"); -%>

<div class="container-fluid">
    <div class="pt-3">
<h2 class="mt-5">"<%=name%>" has <%=foundCharacters.length%> name coincidence(s)</h2>
</div>
  <div class="row row-cols-xs-1 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 pt-1">
    <% if (locals.foundCharacters && foundCharacters.length > 0) { %>
      <% foundCharacters.forEach((char, index) => { %>
        <div class="col m-4" onclick="redirectToGetRoute(`<%=char.id%>`)">
          <div class="card text-center border-warning">
            <img src="<%= char.image %>" alt="Darth Vader" class="card-img-top">
              <h5 class="card-title mt-3"><%= char.name %></h3>
              <p class="card-text affiliation"><%= char.affl[0] %></p>
            </div>
          </div>    
        
      <% }) %>
      </div>
    <% } %>
  </div>
 


<%- include("partials/footer"); -%>