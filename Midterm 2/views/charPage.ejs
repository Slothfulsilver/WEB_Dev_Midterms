<%- include("partials/header"); -%>

<%- include("partials/nav"); -%>

<div class="container pt-5 found">
    <div class="container" id="char">
        <h2><%= hero.name %></h2> 
        <a href="<%= hero.linkWiki %>" target="_blank">Link to the wiki</a>
        <p>ID: <%= hero.id %> </p>
    </div>
    <div id="char">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <img src="<%= hero.image %>" alt="charImg" id="charImg"/>
                </div>
                <div class="col-8" id="main_data">
                    <p> Gender: <%= hero.gender %><br>
                        Height: <%= hero.height %> <br>
                        Species: <%= hero.species %><br>
                        Mass: <%= hero.mass %><br>
                        Year of Birth: <%= hero.birth %><br>
                        Year of Death: <%= hero.death %><br>
                        Home World: <%= hero.homeWorld %> <br>
                        Skin Color: <%= hero.skinColor %> <br>
                        Extras:
                        <% if (hero.extra) { %>
                            <% hero.extra.forEach((val, index) => { %>
                                <ul>
                                <li><%= val %></li>
                                </ul>
                            <% }) %>
                        <% } else { %>
                            <p>No extra data found</p>
                        <% } %>
                    </p>
                    <div class="container-fluid text-center">
                        <div class="row pt-5">
                          <div class="col-3">
                            <p>Affiliations</p>
                          </div>
                          <div class="col-3">
                            <p>Former Affiliations</p>
                          </div>
                          <div class="col-3">
                            <p>Masters</p>
                          </div>
                          <div class="col-3">
                            <p>Apprentices</p>
                          </div>
                        </div>
                        <div class="row pt-5">
                            <div class="col-3">
                                <ul>
                                    <%hero.affl.forEach((val, i)=>{%>
                                        <li><%= val %></li>
                                    <%});%>
                                </ul>
                            </div>
                            <div class="col-3">
                              <p>Former Affiliations</p>
                            </div>
                            <div class="col-3">
                              <p>Masters</p>
                            </div>
                            <div class="col-3">
                              <p>Apprentices</p>
                            </div>
                          </div>
                    </div>
                </div>
            </div>
        </div>
        
       
    </div>
</div>

<%- include("partials/footer"); -%>
